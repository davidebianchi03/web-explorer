<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Web Explorer</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css"
      integrity="sha512-SzlrxWUlpfuzQ+pcUCosxcglQRNAq/DZjVsC0lE40xsADsfeQoEypE+enwcOiGjk/bSuGGKHEyjSoQ1zVisanQ=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link rel="stylesheet" href="/static/css/general.css" />
    <link rel="stylesheet" href="/static/css/data-origin.css" />
  </head>

  <body>
    <%- include('../partials/sidebar'); %>
    <div class="container">
      <h1>Data Origin</h1>

      <div class="connection-input">
        <div class="name-section">
            <input type="text" name="" id="" placeholder="Enter Connection Name">
            <button class="edit-button">
                <i class="fa-solid fa-pen-to-square"></i>
            </button>
        </div>
        <div class="path-section">
            <select name="" id="" class="connection-type-select">
            <option>LOCAL</option>
            <option>SMB</option>
            </select>
            <input type="text" name="" id="" class="connection-path-input" placeholder="Enter Resource Path"/>
            <button class="edit-button">
                <i class="fa-solid fa-pen-to-square"></i>
            </button>
        </div>
      </div>
    </div>
  </body>

  <!-- Scripts -->
  <script src="/static/lib/jquery-3.6.4.min.js"></script>
</html>
